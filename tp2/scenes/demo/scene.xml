<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 

	<!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014, FEUP, University of Porto -->
	
    <globals background="0 0 0 1" ambient="0.5 0.5 0.5 1" /> 

    <fog color="0.0 0.0 0.0 0.0" near="0.0" far="100.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="0 15 15" 
            target="0.0 15 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="5" /> 
    </cameras> 

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas --> 
    <textures>
        <texture id="barWallTex" filepath="scenes/demo/textures/barWall.avif" />
        <texture id="darkBlueWallTex" filepath="scenes/demo/textures/darkBlueWall.jpg" />
        <texture id="barFloorTex" filepath="scenes/demo/textures/barFloor.jpg" />        
		<texture id="tableTex" filepath="scenes/demo/textures/table.png" />
        <texture id="targetTex" filepath="scenes/demo/textures/target.webp" />
        <texture id="glassTex" filepath="scenes/demo/textures/glass.jpg" />
    </textures> 

    <materials> 

        <material id="tableApp" 
            color="0.36 0.25 0.2 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="0" 
            textureref="tableTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="barWallApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.1 0.1 0.64 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="barWallTex" 
            texlength_s="20" 
            texlength_t="8" 
            twosided = "true" />

        <material id="darkBlueWallApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.1 0.1 0.64 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="darkBlueWallTex" 
            texlength_s="25" 
            texlength_t="8" 
            twosided = "true" />

        <material id="barFloorApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.1 0.1 0.1 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="barFloorTex" 
            texlength_s="20" 
            texlength_t="25" 
            twosided = "true" />
        
        <material id="targetApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.1 0.1 0.1 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="targetTex" 
            texlength_s="2" 
            texlength_t="2" />

        <material id="glassApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.9 0.9 0.9 1.0" 
            specular="0.9 0.9 0.9 1.0" 
            shininess="0" 
            textureref="glassTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="blackMetal" 
            emissive="0.0 0.0 0.0 1" 
            color="0.1 0.1 0.1 1.0"  
            specular="0.1 0.1 0.1 1.0" 
            shininess="0"  
            twosided = "true" />
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
                <noderef id="leftWall" /> 
				<noderef id="rightWall" />
                <noderef id="backWall" /> 
				<noderef id="frontWall" />  
				<noderef id="floor" /> 
				<noderef id="table1" /> 
                <noderef id="bench1" />
                <noderef id="bench2" />
                <noderef id="counter" />
                <noderef id="target" />
                <noderef id="cup1" />
                <noderef id="cup2" />
                <noderef id="cup3" />

                <pointlight id="chandelier1" enabled="true" 
                    color="0.8 0.8 1.0 1" 
                    intensity="90.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="8.33 10 10"  
                />

                <pointlight id="chandelier2" enabled="true" 
                    color="0.8 0.8 1.0 1" 
                    intensity="90.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="false"
                    position="16.66 10 10"  
                />  
            </children> 
        </node>
		
		<node id="rectangle1"> 

            <transforms>
				<translate value3="0 0 -0.5" />
				<rotate value3="0 180.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive> 
            </children> 
        </node>
		
		<node id="rectangle2"> 

            <transforms>
				<translate value3="0 0 0.5" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle3"> 

            <transforms>
				<translate value3="0 -0.5 0" />
				<rotate value3="90 0.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle4"> 

            <transforms>
				<translate value3="0 0.5 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle5"> 

            <transforms>
				<translate value3="-0.5 0 0" />
				<rotate value3="0.0 -90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle6"> 
            <transforms>
				<translate value3="0.5 0 0" />
				<rotate value3="0.0 90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="unitCube">
            <children>            
				<!-- Back -->
                <noderef id="rectangle1" /> 
				<!-- Front -->
				<noderef id="rectangle2" /> 
				<!-- Bottom -->
				<noderef id="rectangle3" />
				<!-- Top -->
				<noderef id="rectangle4" />
				<!-- Left -->				
				<noderef id="rectangle5" />
				 <!-- Right -->
				<noderef id="rectangle6" />
            </children> 
        </node>
		
		<node id="leg">
			<transforms>
				<scale value3="0.06 0.92 0.06" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>
		
		<node id="leg1">
			<transforms>
				<translate value3="0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg2">
			<transforms>
				<translate value3="0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg3">
			<transforms>
				<translate value3="-0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg4">
			<transforms>
				<translate value3="-0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="tableTop">
			<transforms>
				<translate value3="0 0.48 0" />
				<scale value3="1 0.08 1" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>
		
		<node id="table">
			<transforms>
				<translate value3="0 1.2 0" />
				<rotate value3="0.0 90.0 0.0" />
				<scale value3="6 2.5 3.5" />
            </transforms> 

			<materialref id="tableApp" />
			
            <children>             
                <noderef id="tableTop" />
				<noderef id="leg1" />
				<noderef id="leg2" />
				<noderef id="leg3" />
				<noderef id="leg4" />
            </children> 
        </node>

        <node id="table1">
			<transforms>
				<translate value3="20 0 16.99" />
            </transforms> 
			
            <children>             
                <noderef id="table" />
            </children> 
        </node>

        <node id="benchBottom">
			<transforms>
                <translate value3="1.25 1.0 3.0" />
				<scale value3="2.5 2.0 6.0" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="benchTop">
			<transforms>
                <translate value3="2.25 2.5 3.0" />
				<scale value3="0.5 3.0 6.0" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="bench"> 
			<materialref id="tableApp" />
			
            <children>             
                <noderef id="benchBottom" />
				<noderef id="benchTop" />
            </children> 
        </node>

        <node id="bench1"> 
			<transforms>
                <translate value3="22.49 0 13.99" />
            </transforms>

            <children>             
                <noderef id="bench" />
            </children> 
        </node>

        <node id="bench2">
            <transforms>
                <translate value3="17.49 0 19.99" />
                <rotate value3="0.0 180.0 0.0" />
            </transforms> 
			
            <children>             
                <noderef id="bench" />
            </children> 
        </node>

        <node id="counterBottom">
			<transforms>
                <translate value3="0 1.5 0" />
				<scale value3="2.5 3.0 10.0" />
            </transforms> 

            <materialref id="blackMetal" />

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="counterTop">
			<transforms>
                <translate value3="0.0 3.5 0.0" />
				<scale value3="3 1.0 10.5" />
            </transforms> 

            <materialref id="tableApp" />

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

        <node id="counter">
            <transforms>
                <translate value3="6.0 0.0 5.25" />
            </transforms>  

            <children>             
                <noderef id="counterBottom" />
				<noderef id="counterTop" />
            </children> 
        </node>
		
		<node id="floor">
			<transforms>
				<translate value3="0 0 20" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="barFloorApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="25 20" />
                </primitive>
            </children> 
        </node>
		
		<node id="leftWall">
			<transforms>
				<translate value3="0 0 20" />
				<rotate value3="0.0 90 0.0" />
            </transforms> 

			<materialref id="barWallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="20 8" />
                </primitive>
            </children> 
        </node>
		
		<node id="backWall">
			<materialref id="darkBlueWallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="25 8" />
                </primitive>
            </children> 
        </node>

        <node id="rightWall">
			<transforms>
				<translate value3="25 0 0" />
				<rotate value3="0.0 -90 0.0" />
            </transforms> 

			<materialref id="darkBlueWallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="20 8" />
                </primitive>
            </children> 
        </node>

        <node id="frontWall">
			<transforms>
				<translate value3="0 0 20" />
				<rotate value3="0.0 0 0.0" />
            </transforms> 

			<materialref id="darkBlueWallApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="25 8" />
                </primitive>
            </children> 
        </node>

        <node id="target">
            <transforms>
				<translate value3="16 5 0.05" />
				<rotate value3="90.0 100.0 0.0" />
            </transforms> 

            <materialref id="targetApp" />

            <children>             
                <primitive>
                    <cylinder base="2.0" top="2.0" height="0.1" slices="20" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="cup">
			<materialref id="glassApp" />
			
            <children>             
                <primitive>
                    <cylinder base="0.1" top="0.15" height="0.8" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="cup1">
			<transforms>
                <translate value3="7 4.4 4.9" />
            </transforms>
			
            <children>             
                <noderef id="cup" />
            </children> 
        </node>

        <node id="cup2">
			<transforms>
                <translate value3="6.4 4.4 2" />
            </transforms>
			
            <children>             
                <noderef id="cup" />
            </children> 
        </node>

        <node id="cup3">
			<transforms>
                <translate value3="6.5 4.4 8" />
            </transforms>
			
            <children>             
                <noderef id="cup" />
            </children> 
        </node>
    </graph> 
</yaf> 