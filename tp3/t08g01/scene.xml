<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014,
    FEUP, University of Porto -->

    <globals background="0 0 0 1" ambient="1 1 1 1" />

    <fog color="1 1 1 1.0" near="0.0" far="700.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 10 15" 
            target="5 5 5" />

        <orthogonal id="cam2"
            near="-50"
            far="100"
            location="0 0 20"
            target="0 0 0"
            left="-5"
            right="5"
            bottom="-5"
            top="5" />

        <perspective id="pov"
            angle="60"
            near="0.1"
            far="1000"
            location="23 5 18"
            target="10 2 -2" />
    </cameras>

    <skybox size="600 600 600" 
        center="0 0 0" 
        emissive="1.0 1.0 1.0 1.0" 
        intensity="1.0" 
        up="t08g01/textures/sky.jpg"
        down="t08g01/textures/sky.jpg"
        left="t08g01/textures/sky.jpg"
        right="t08g01/textures/sky.jpg"
        front="t08g01/textures/sky.jpg"
        back="t08g01/textures/sky.jpg" />

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas
    texturas -->
    <textures>
        <texture id="grassTex" filepath="t08g01/textures/grass.jpg" />
        <texture id="coneTex" filepath="t08g01/textures/cone.jpg" />
        
    </textures>

    <materials>
        <material id="grassApp"
            color="0.1 0.7 0.0 1.0"
            emissive="0.0 0.0 0.0 0.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="grassTex"
            texlength_s="0.01"
            texlength_t="0.01"
            twosided="true" />

        <material id="coneApp"
            color="1.0 0.5 0.0 1.0"
            emissive="0.0 0.0 0.0 0.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="coneTex"
            texlength_s="0.01"
            texlength_t="0.01"
            twosided="true" />

    </materials> 

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="terrain" />
                <noderef id="cone" />
            </children>
        </node>

        <node id="rectangle1">

            <transforms>
                <translate value3="0 0 -0.5" />
                <rotate value3="0 3.14159265359 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle2">

            <transforms>
                <translate value3="0 0 0.5" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle3">

            <transforms>
                <translate value3="0 -0.5 0" />
                <rotate value3="1.57079632679 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle4">

            <transforms>
                <translate value3="0 0.5 0" />
                <rotate value3="-1.57079632679 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle5">

            <transforms>
                <translate value3="-0.5 0 0" />
                <rotate value3="0.0 -1.57079632679 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle6">
            <transforms>
                <translate value3="0.5 0 0" />
                <rotate value3="0.0 1.57079632679 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="unitCube">
            <children>
                <!-- Back -->
                <noderef id="rectangle1" />
                <!-- Front -->
                <noderef id="rectangle2" />
                <!-- Bottom -->
                <noderef id="rectangle3" />
                <!-- Top -->
                <noderef id="rectangle4" />
                <!-- Left -->
                <noderef id="rectangle5" />
                <!-- Right -->
                <noderef id="rectangle6" />
            </children>
        </node>

        <node id="terrain">
            <transforms>
                <rotate value3="-1.57079632679 0.0 0.0" />
                <scale value3="600 600 600" />
            </transforms>

            <materialref id="grassApp" />

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="cone">
            <transforms>
                <translate value3="0.0 1.0 0.0" />
                <rotate value3="0.0 0.0 0.0" />
                <scale value3="1 1 1" />
            </transforms>

            <materialref id="coneApp" />

            <children>
                <primitive>
                    <cylinder base="2.0" top="0.1" height="3.0" slices="32" stacks="32" />
                </primitive>
            </children>
        </node>
    </graph>
</yaf> 