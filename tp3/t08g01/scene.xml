<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <!-- Credits of the original file go to Group 1, class 1 of course LAIG school year 2013/2014,
    FEUP, University of Porto -->

    <globals background="0 0 0 1" ambient="0.26 0.23 0.23 1" />

    <fog color="0 0 0 1.0" near="0.0" far="300.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 10 15" 
            target="5 5 5" />

        <orthogonal id="cam2"
            near="-50"
            far="100"
            location="0 0 20"
            target="0 0 0"
            left="-5"
            right="5"
            bottom="-5"
            top="5" />

        <perspective id="pov"
            angle="60"
            near="0.1"
            far="1000"
            location="23 5 18"
            target="10 2 -2" />
    </cameras>

    <skybox size="60 60 60" 
        center="0 0 0" 
        emissive="1.0 1.0 1.0 1.0" 
        intensity="1.0" 
        up="scenes/t08g01/textures/nightSky.jpg"
        down="scenes/t08g01/textures/nightSky.jpg"
        left="scenes/t08g01/textures/nightSky.jpg"
        right="scenes/t08g01/textures/nightSky.jpg"
        front="scenes/t08g01/textures/nightSky.jpg"
        back="scenes/t08g01/textures/nightSky.jpg" />

    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas
    texturas -->
    <textures>
        
    </textures>

    <materials>

    </materials> 

    <graph rootid="scene">

        <node id="scene">
            <children>
                <noderef id="unitCube" />
            </children>
        </node>

        <node id="rectangle1">

            <transforms>
                <translate value3="0 0 -0.5" />
                <rotate value3="0 3.14159265359 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle2">

            <transforms>
                <translate value3="0 0 0.5" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle3">

            <transforms>
                <translate value3="0 -0.5 0" />
                <rotate value3="1.57079632679 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle4">

            <transforms>
                <translate value3="0 0.5 0" />
                <rotate value3="-1.57079632679 0.0 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle5">

            <transforms>
                <translate value3="-0.5 0 0" />
                <rotate value3="0.0 -1.57079632679 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="rectangle6">
            <transforms>
                <translate value3="0.5 0 0" />
                <rotate value3="0.0 1.57079632679 0.0" />
            </transforms>

            <children>
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive>
            </children>
        </node>

        <node id="unitCube">
            <children>
                <!-- Back -->
                <noderef id="rectangle1" />
                <!-- Front -->
                <noderef id="rectangle2" />
                <!-- Bottom -->
                <noderef id="rectangle3" />
                <!-- Top -->
                <noderef id="rectangle4" />
                <!-- Left -->
                <noderef id="rectangle5" />
                <!-- Right -->
                <noderef id="rectangle6" />
            </children>
        </node>
    </graph>
</yaf> 